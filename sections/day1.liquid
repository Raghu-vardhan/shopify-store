{%- assign product = all_products[section.settings.product_image] -%}

{%- if product -%}
  <div class="main-section page-width">
    <!-- Main Swiper (Main Images Carousel) -->
    <div class=" main-swiper">
      <div class="swiper-wrapper">
        {%- for image in product.images -%}
          <div class="swiper-slide">
            <img 
              src="{{ image | img_url: '600x600' }}" 
              alt="{{ product.title }}" 
              width="600" height="600" 
              class="main-image" 
            />
          </div>
        {%- endfor -%}
      </div>
    </div>

    <!-- Thumbnails -->
    <div class="thumbnail-images">
      {%- for image in product.images -%}
        <img 
          src="{{ image | img_url: '100x100' }}" 
          onclick="swiper.slideTo({{ forloop.index0 }})"
          alt="Thumbnail"
          style="cursor:pointer; margin:5px; border:1px solid #ccc;" 
          width="100" height="100"
        />
      {%- endfor -%}
    </div>

    <!-- Product Details -->
    <div class="product-details">
      <h2>{{ product.title }}</h2>
    </div>
  </div>
{%- endif -%}


<style>

  /* Make sure swiper container has fixed size and hides overflow */
  .main-swiper {
    width: 600px;
    height: 600px; /* Adjust height as needed */
    overflow: hidden;
  }
  .swiper-slide{
    display: flex;
    justify-content: start;
  }
  .swiper{
    margin:0;
}
</style>


<!-- Swiper CSS -->


<!-- Swiper JS -->
<script src="https://cdn.jsdelivr.net/npm/swiper@10/swiper-bundle.min.js"></script>

<!-- Swiper Initialization -->
<script>
  const swiper = new Swiper(".main-swiper", {
    loop: true,
    slidesPerView: 1,
    spaceBetween: 10,
  });
</script>

{% schema %}
  {
    "name": "custom thumbnail",
    "settings": [
        {
          "type": "product",
          "id": "product_image",
          "label": "Select Product for Thumbnail"
        }
    ],
    "presets": [

      {
        "name": "custom thumbnail",
        "category": "Custom"
      }
    ]
  }
{% endschema %}